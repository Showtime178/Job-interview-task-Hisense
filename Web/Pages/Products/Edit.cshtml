@page
@model Web.Pages.Products.EditModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h3>Dodaj izdelek</h3>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="mt-3 col-sm-6">
        <label>Šifra</label>
        <input class="form-control" name="Product.Code" id="Product_Code" value="@Model.Product.Code" readonly/>
    </div>
    <div class="mt-2 col-sm-6">
        <label>Model</label>
        <input class="form-control" name="Product.Model" id="Model" value="@Model.Product.Model" />
    </div>
    <div class="mt-2 col-sm-6">
        <label>Širina</label>
        <input type="number" class="form-control" name="Product.Width" id="Width" value="@Model.Product.Width" />
    </div>
    <div class="mt-2 col-sm-6">
        <label>Višina</label>
        <input type="number" class="form-control" name="Product.Height" id="Height" value="@Model.Product.Height" />
    </div>
    <div class="mt-2 col-sm-6">
        <label>Globina</label>
        <input type="number" class="form-control" name="Product.Depth" id="Depth" value="@Model.Product.Depth" />
    </div>
    <div class="mt-3 col-sm-6">
        <button type="submit" class="btn btn-primary btn-sm hisense-button">Shrani</button>
        <a class="btn btn-primary btn-sm hisense-button" href="/Products">Prekliči</a>
    </div>
</form>
