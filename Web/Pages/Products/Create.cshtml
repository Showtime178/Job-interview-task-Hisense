@page
@model Web.Pages.Products.CreateModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h3>Dodaj izdelek</h3>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="mt-3 col-sm-6">
        <label>Šifra</label>
        <input class="form-control" name="Product.Code" id="Product_Code" required/>
    </div>
    <div class="mt-2 col-sm-6">
        <label>Model</label>
        <input class="form-control" name="Product.Model" id="Model" />
    </div>
    <div class="mt-2 col-sm-6">
        <label>Širina</label>
        <input type="number" class="form-control" name="Product.Width" id="Width" />
    </div>
    <div class="mt-2 col-sm-6">
        <label>Višina</label>
        <input type="number" class="form-control" name="Product.Height" id="Height" />
    </div>
    <div class="mt-2 col-sm-6">
        <label>Globina</label>
        <input type="number" class="form-control" name="Product.Depth" id="Depth" />
    </div>
    <div class="mt-3 col-sm-6">
        <button type="submit" class="btn btn-primary btn-sm hisense-button">Shrani</button>
        <a class="btn btn-primary btn-sm hisense-button" href="/Products">Prekliči</a>
    </div>
</form>
